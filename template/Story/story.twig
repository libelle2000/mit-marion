{% extends "pageBase.twig" %}
{% block metaDescription %}{{ htmlHead.metaDescription }}{% endblock %}
{% block title %}{{ htmlHead.title }}{% endblock %}
{% block additionalStyleSheets %}
    <link rel="stylesheet" href="/_assets/css/generalText.css"/>
{% endblock %}
{% block content %}
    {{ include('include/header.incl.twig') }}
    <main>
        <article class="container-content">
            <section class="member">
                <blockquote class="mainquote"
                            style="background-image: url({{ member.mainQuote.backgroundImage.url }}); background-position: {{ member.mainQuote.backgroundImage.position }};">
                    <span>"{{ member.mainQuote.text|raw }}"</span>
                </blockquote>
                <blockquote class="subquote">"{{ member.subQuote.text }}"</blockquote>
            </section>
            <section class="marion">
                <img class="photo" src="/_assets/images/marion.jpg" alt="Trainerin Marion" loading="lazy" decoding="auto"/>
                <blockquote class="mainquote">
                    "{{ marion.quoteText }}"
                </blockquote>
                {% if marion.advantages|length > 0 %}
                    <ul class="advantages">
                        {% for fact in marion.advantages %}
                            <li>{{ fact }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <p class="closingText">{{ marion.closingText }}</p>
            </section>
            <a class="button" href="/kontakt/">{{ callToAction.caption|join('<br />')|raw }}</a>
            <section class="insight generalText">
                <div class="label">Ein kleiner Einblick in meinen Kurs:</div>
                <h1>{{ insight.headline }}</h1>
                {% for paragraph in insight.paragraphs %}
                    <p>{{ paragraph }}</p>
                {% endfor %}
            </section>
        </article>
    </main>
    <nav class="zapper">
        <a class="zap previous" href="{{zapper.previous.href}}">{{zapper.previous.caption}}</a>
        <a class="zap next" href="{{zapper.next.href}}">{{zapper.next.caption}}</a>
    </nav>
{% endblock %}
